<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cccolor"
    tools:context="com.example.admin.quiztime.Colour">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/rgQ2"

                android:text="The sky is..."
                android:textColor="#e91e63"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="299dp" />

            <RadioGroup
                android:id="@+id/rgQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_toEndOf="@+id/radioGroup5"
                android:layout_toRightOf="@+id/radioGroup5"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="16dp">

                <RadioButton
                    android:id="@+id/rbGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Green" />

                <RadioButton

                    android:id="@+id/rbBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Blue" />

                <RadioButton

                    android:id="@+id/rbBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Black" />


            </RadioGroup>


            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="16dp">

            </RadioGroup>

            <TextView

                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="The colour of the milk is..."
                android:textColor="#e91e63"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="112dp" />

            <RadioGroup
                android:id="@+id/rgQ3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/rgQ1"
                android:layout_alignRight="@+id/rgQ1"

                android:layout_below="@+id/textView2"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="129dp">

                <RadioButton
                    android:id="@+id/rbYellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yellow" />

                <RadioButton
                    android:id="@+id/rbWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="White" />

                <RadioButton

                    android:id="@+id/rbViolet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Violet" />


            </RadioGroup>


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rgQ5"
                android:layout_marginLeft="5dp"
                android:text="A carrot is...in colour"
                android:textColor="#e91e63"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="397dp" />

            <RadioGroup
                android:id="@+id/rgQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_below="@+id/textView10"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="431dp">

                <RadioButton

                    android:id="@+id/rbRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Red" />

                <RadioButton

                    android:id="@+id/rbOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Orange" />

                <RadioButton

                    android:id="@+id/rbMaroon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Maroon" />


            </RadioGroup>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rgQ3"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/radioGroup5"
                android:layout_toRightOf="@+id/radioGroup5"

                android:text="What colour is the blood?"
                android:textColor="#e91e63"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="206dp" />

            <RadioGroup
                android:id="@+id/rgQ4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="223dp">

                <RadioButton

                    android:id="@+id/rbPink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pink" />

                <RadioButton
                    android:id="@+id/rbRedd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Red" />

                <RadioButton

                    android:id="@+id/rbPeach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Peach" />


            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="what colour is the grass?"
                android:textColor="#e91e63"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgQ5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="316dp">

                <RadioButton
                    android:id="@+id/rbGreeen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Green" />

                <RadioButton
                    android:id="@+id/rbBluee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Blue" />

                <RadioButton

                    android:id="@+id/rbPurple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Purple" />


            </RadioGroup>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/btnSubmit"
                    android:layout_alignBottom="@+id/btnSubmit"
                    android:text="Total Score"
                    android:textColor="#000006"
                    android:textStyle="bold" />
                <!--android:layout_alignEnd="@+id/textView7"-->
                <!--android:layout_alignRight="@+id/textView7"-->

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="#EC407A"
                    android:text="SUBMIT"
                    android:textColor="#90CAF9" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#EC407A"
                    android:onClick="main"
                    android:text="SELECT ANOTHER CATEGORY"
                    android:textColor="#90CAF9"/>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
