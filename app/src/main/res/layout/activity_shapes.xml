<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/shapes"
    tools:context="com.example.admin.quiztime.Shapes">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rgQ4"

        android:text="A square has four sides"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

        <RadioGroup
            android:id="@+id/rgQ8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/rgQ1"
            android:layout_alignRight="@+id/rgQ1"
            android:layout_below="@+id/textView5"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="16dp">

            <RadioButton
                android:id="@+id/rbSqTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="True" />

            <RadioButton

                android:id="@+id/rbSqFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="False" />
        </RadioGroup>


    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgQ8"
        android:layout_toEndOf="@+id/radioGroup5"
        android:layout_toRightOf="@+id/radioGroup5"
        android:text="A circle has three sides"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="112dp" />

        <RadioGroup
            android:id="@+id/rgQ9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"

            android:layout_below="@+id/textView6"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="129dp">

            <RadioButton
                android:id="@+id/rbCirTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="True" />

            <RadioButton
                android:id="@+id/rbCirFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="False" />
        </RadioGroup>



    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rgQ10"


        android:text="A triangle has three corners"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="206dp" />

        <RadioGroup
            android:id="@+id/rgQ10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="223dp">

            <RadioButton
                android:id="@+id/rbTriTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="True" />

            <RadioButton

                android:id="@+id/rbTriFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="False" />
        </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="16dp">

    </RadioGroup>





    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgQ9"
        android:layout_toEndOf="@+id/radioGroup5"
        android:layout_toRightOf="@+id/radioGroup5"
        android:text="A rectangle does NOT have four sides"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="299dp" />



    <RadioGroup
        android:id="@+id/rgQ7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="316dp">

        <RadioButton
            android:id="@+id/rbRecTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="True" />

        <RadioButton
            android:id="@+id/rbRecFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="False" />


    </RadioGroup>




    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rgQ7"
        android:text="An oval has sides"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="397dp" />

        <RadioGroup
            android:id="@+id/rgQ6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/textView10"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="431dp">

            <RadioButton

                android:id="@+id/rbOvTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="True" />

            <RadioButton

                android:id="@+id/rbOvFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="False" />
        </RadioGroup>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnSubmit"
                android:layout_alignBottom="@+id/btnSubmit"
                android:text="Total Score"
                android:textColor="#000006"
                android:textStyle="bold" />
            <!--android:layout_alignEnd="@+id/textView7"-->
            <!--android:layout_alignRight="@+id/textView7"-->

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#EC407A"
                android:text="SUBMIT"
                android:textColor="#90CAF9" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#EC407A"
                android:onClick="main"
                android:text="SELECT ANOTHER CATEGORY"
                android:textColor="#90CAF9"/>

        </RelativeLayout>









      </LinearLayout>
    </ScrollView>
</LinearLayout>
